@using Develop.Model
@{
    ViewBag.Title = "Home Page";
    ResultModel<string> No = ViewBag.NoInvoice != null ? ViewBag.NoInvoice : null;
}

@model Develop.Model.AllModel
<input type="hidden" id="Message" value="@ViewBag.Message" />
<!-- Welcome   -->
<section id="welcome" class="welcome-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Welcome Back in ASP .NET</h1>
                <h3>Perkenalkan saya <b><a href="https://sekawan.xyz/page/1-portofolio" target="_blank">Yusuf Adhi Tomo</a></b> saat ini sedang bekerja di <a href="https://salt.id/" target="_blank">SALT</a></h3>
                <p>
                    Di Aplikasi ini saya menggunakan Entity Framework 6, MSSSQL Server 2017, RESTful API, dan Tools Visual Studio 2017.
                    Terimakasih kepada Bapak/Ibu yang telah mereview aplikasi yang saya buat ini. Jika Bapak/Ibu berkenan mengundang 
                    saya silahkan hubungi saya di
                    <a href="https://api.whatsapp.com/send?phone=6289664451557" target="_blank" class="wa">
                        <img src="@Links.Assets.images.icon_wa_png" class="icon-wa" /> Link ini
                    </a>
                </p>
                <p>Berikut Hasil Aplikasi</p>
                <ul class="nav nav-pills rata">
                    <li class="active"><a data-toggle="pill" href="#home">Costumers</a></li>
                    <li><a data-toggle="pill" href="#menu1">Product</a></li>
                    <li><a data-toggle="pill" href="#menu2">Invoice</a></li>
                    <li><a data-toggle="pill" href="#menu3">Add Costumers</a></li>
                    <li><a data-toggle="pill" href="#menu4">Add Product</a></li>
                    <li><a data-toggle="pill" href="#menu5">Add Invoice</a></li>
                </ul>
                <hr />

                <!--Part content-->
                <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">
                        <h3>Costumers</h3>
                        <p>&nbsp;</p>
                        <div class="col-lg-9 col-lg-offset-1">
                            @if (Model.ListUsers != null)
                            {
                                int A = 1;
                                <table class="table table-hover rata">
                                    <thead class="salt page-scroll">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Username</th>
                                            <th scope="col">Created Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.ListUsers)
                                        {
                                            <tr>
                                                <th scope="row">@A</th>
                                                <td>@item.Name</td>
                                                <td>@item.Username</td>
                                                <td>@item.Createddate.ToString("dd-MM-yyyy HH:mm")</td>
                                            </tr>
                                            A++;
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="jumbotron salt">
                                    <h3>
                                        Oops... Data Belum tersedia silahkan Tambah Customer
                                    </h3>
                                    <a class="btn btn-primary page-scroll" href="#Customers">Add Customers</a>
                                </div>
                            }
                        </div>
                    </div>
                    <div id="menu1" class="tab-pane fade">
                        <h3>Product</h3>
                        <p>&nbsp;</p>
                        <div class="col-lg-9 col-lg-offset-1">
                            @if (Model.ListCatalogues != null)
                            {
                                int B = 1;
                                <table class="table table-hover rata">
                                    <thead class="salt page-scroll">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Code</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">Created Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.ListCatalogues)
                                        {
                                            <tr>
                                                <th scope="row">@B</th>
                                                <td>@item.Code</td>
                                                <td>@item.Name</td>
                                                <td>@item.Price</td>
                                                <td>@item.Qty</td>
                                                <td>@item.Createddate.ToString("dd-MM-yyyy HH:mm")</td>
                                            </tr>
                                            B++;
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="jumbotron salt">
                                    <h3>
                                        Oops... Data Belum tersedia silahkan Tambah Product
                                    </h3>
                                    <a class="btn btn-primary page-scroll" href="#Catalogue">Add Product</a>
                                </div>
                            }
                        </div>
                    </div>
                    <div id="menu2" class="tab-pane fade">
                        <h3>Invoice</h3>
                        <p>&nbsp;</p>
                        <div class="col-lg-9 col-lg-offset-1">
                            @if (Model.ListInvoices != null)
                            {
                                int C = 1;
                                <table class="table table-hover rata">
                                    <thead class="salt page-scroll">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">No Invoice</th>
                                            <th scope="col">Customer</th>
                                            <th scope="col">Total Price</th>
                                            <th scope="col">Transaction Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.ListInvoices)
                                        {
                                            <tr>
                                                <th scope="row">@C</th>
                                                <td>@item.ID</td>
                                                <td>@item.Name</td>
                                                <td>@item.TotalPrice</td>
                                                <td>@item.TransactionDate.Value.ToString("dd-MM-yyyy HH:mm")</td>
                                            </tr>
                                            C++;
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="jumbotron salt">
                                    <h3>
                                        Oops... Data Belum tersedia silahkan Tambah Invoice
                                    </h3>
                                    <a class="btn btn-primary page-scroll" href="#Invoice">Add Invoice</a>
                                </div>
                            }
                        </div>
                    </div>
                    <div id="menu3" class="tab-pane fade">
                        <h3>Customers</h3>
                        <p>&nbsp;</p>
                        <a class="btn btn-primary salt page-scroll" href="#Customers">Click To Scroll Down!</a>
                    </div>
                    <div id="menu4" class="tab-pane fade">
                        <h3>Product</h3>
                        <p>&nbsp;</p>
                        <a class="btn btn-primary salt page-scroll" href="#Catalogue">Click To Scroll Down!</a>
                    </div>
                    <div id="menu5" class="tab-pane fade">
                        <h3>Invoice</h3>
                        <p>&nbsp;</p>
                        <a class="btn btn-primary salt page-scroll" href="#Invoice">Click To Scroll Down!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- What we do Section -->
<section id="Customers" class="whatwedo-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Form Add Customers</h1>
                <br />
                <form class="form-inline" action="@Url.Action(MVC.Home.SubmitUser())" method="post">
                    <div class="form-group">
                        <label for="email">Full Name : </label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="pwd">Username :</label>
                        <input type="text" class="form-control" id="Username" name="Username" required>
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password :</label>
                        <input type="password" class="form-control" id="Password" name="Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary salt page-scroll">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Catalogue Section -->
<section id="Catalogue" class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Form Add Product</h1>
                <br />
                <form class="form-horizontal" action="@Url.Action(MVC.Home.SubmitCatalogue())" method="post">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Code :</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Code" name="Code" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Name Product :</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Quantity :</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Qty" name="Qty" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Price :</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Price" name="Price" placeholder="Enter password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="pwd">Description :</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Description" name="Description" placeholder="Enter password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- What we do Section -->
<section id="Invoice" class="whatwedo-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Form Add Invoice</h1>
                <br />
                <form class="form-horizontal" action="@Url.Action(MVC.Home.SubmitInvoice())" method="post">
                    <input type="hidden" id="Count" value="0" />
                    <input type="hidden" name="ID" id="IDInvoice"value="@No.Value" />
                    <div class="form-group">
                        <label class="control-label col-sm-8" for="email">No Invoice :</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control " name="No" value="@No.Value" disabled />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Customer :</label>
                        <div class="col-sm-4">
                            <select class="form-control" name="UsersID" required>
                                @if (Model.ListUsers != null)
                                {
                                    foreach (var item in Model.ListUsers)
                                    {
                                        <option value="@item.ID">@item.Name | @item.Username</option>
                                    }
                                }
                            </select>
                        </div>
                        <label class="control-label col-sm-2" for="email">Transaction Date :</label>
                        <div class="col-sm-2">
                            <input type="date" class="form-control " name="TransactionDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>
                    </div>
                    <div class="col-lg-9 col-lg-offset-1">
                        <table class="table table-hover rata" id="Items">
                            <thead class="salt page-scroll">
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Qty</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Sub Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr id="ListProduct">
                                    <td>

                                        <select class="form-control" name="items[0].CatalogueID" id="CatalogueID" required onchange="changedata($('#Count').val())">
                                            @if (Model.ListCatalogues != null)
                                            {
                                                foreach (var item in Model.ListCatalogues)
                                                {
                                                    <option value="@item.ID" data-qty="@item.Qty" data-price="@item.Price">@item.Code | @item.Name</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td><input type="number" name="items[0].Qty" id="qty" class="form-control" required /></td>
                                    <td><input type="number" name="items[0].price" id="price" class="form-control" value="12000" disabled /></td>
                                    <td><input type="number" name='total[]' id="Subtotal" placeholder='0.00' class="form-control total" readonly /></td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td><button type="button" class="btn btn-primary" onclick="additem()">Add item</button></td>
                                    <td></td>
                                    <td>Total : </td>
                                    <td id="GrandTotal"></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>